GOAL: RESH

INITIAL:

OUTPUT ”EXPERT SYSTEM”

OUTPUT “ON WORK PLACE”

OBRAZ=UNKNOWN

RAZRAB=UNKNOWN

BALL=UNKNOWN

STAJ=UNKNOWN

APPAR=UNKNOWN

VS=UNKNOWN

ANGL=UNKNOWN

KVALIF=UNKNOWN

PODRAZD=UNKNOWN

RESH=UNKNOWN

E.LSTR=50

DO:

OUTPUT “SOLUTION: ”, RESH

RULE: R1

READY: OUTPUT "R1"

IF: (OBRAZ="YES") AND (BALL>=4)

THEN: KVALIF="YES"

RULE: R2

READY: OUTPUT "R2"

IF: (OBRAZ="NO") OR (BALL<4)

THEN: RESH="DENIED"

RULE: R3

READY: OUTPUT "R3"

IF: (KVALIF="YES") AND (RAZRAB="YES")

THEN: PODRAZD="PKO"

RULE: R4

READY: OUTPUT "R4"

IF: (KVALIF="YES") AND (STAJ>=3) AND (APPAR="YES")

THEN: PODRAZD="OTO"

RULE: R5

READY: OUTPUT "R5"

IF: (PODRAZD="PKO") AND (STAJ>=5)

THEN: RESH="RESPONSIBLE EXECUTOR OF THE PROJECT"

RULE: R6

READY: OUTPUT "R6"

IF: (PODRAZD="PKO") AND (STAJ<5)

THEN: RESH="WORKER"

RULE: R7

READY: OUTPUT "R7"

IF: (PODRAZD="OTO") AND (VS="YES")

THEN: RESH="ENGENEERING OF THE TECHNICAL MACHINE"

RULE: R8

READY: OUTPUT "R8"

IF: (PODRAZD="OTO") AND (VS="NO")

THEN: RESH="LIL STAJER"

RULE: R9

READY: OUTPUT "R9"

IF: (KVALIF="YES") AND (ANGL="YES")

THEN: RESH="ENGENEERING OF THE INFORMATION MANAGERING"

RULE: R10

READY: OUTPUT "R10"

IF: (RAZRAB="NO") AND ((APPAR="NO") OR (STAJ<3)) AND (ANGL="NO")

THEN: RESH="DENIED"

VAR: OBRAZ

FIND: INPUT OBRAZ WITH "DO YOU HAVE HIGH EDUCATION?         (YES/NO) "

LABEL: HIGH EDUCATION

VAR: BALL

FIND: INPUT BALL NUM WITH "AVERAGE MARK (0-5)? "

LABEL: AVERAGE MARK FROM SCHOOL

VAR: RAZRAB

FIND: INPUT RAZRAB WITH "DO YOU HAVE EXPIRIENSE             (YES/NO)? "

LABEL: EXPIRIENSE

VAR: STAJ

FIND: INPUT STAJ NUM WITH "DO YOU WORKING ON YOUR PROFFESIONAL? "

LABEL: PROFESIONAL

VAR: APPAR

FIND: INPUT APPAR WITH "DO YOU WORKING WITH COMPUTER ?"

LABEL: WORK COMPUTER

VAR: VS

FIND: INPUT VS WITH "DO YOU HAVE EXPIRIENCE WITH EXPERT SYSTEM? "

LABEL: EXPERT SYSTEM

VAR: ANGL

FIND: INPUT ANGL WITH "DO YOU KNOW ENGLISH LANGUAGE? "

LABEL: ENGLISH LANGUAGE

END: